<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.0" method="upgrade" group="hikashoppayment">
    <name>IDPay for Hikashop</name>
    <title>RSForm! Idpay</title>
	<author>MimDeveloper.Tv (Mohammad-Malek), mnbp1371, vispa</author>
	<creationDate>December 2022</creationDate>
	<copyright>Copyright 2020 IDPay</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2 or later</license>
	<authorEmail>support@idpay.ir</authorEmail>
	<authorUrl>https://idpay.ir</authorUrl>
	<version>2.0.0</version>
    <description>IDPay</description>
    <files>
        <filename plugin="idpay">idpay.php</filename>
        <filename>idpay_configuration.php</filename>
        <filename>idpay_redirect.php</filename>
    </files>
    <updateservers>
        <server type="extension" priority="1" name="Hikashoppayment - IDPay for Hikashop">https://static.idpay.ir/plugins/joomla/hikashop-idpay-update.xml</server>
    </updateservers>
    <params addpath="/components/com_hikashop/params">
        <param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop"
               description="HikaShop options"/>
    </params>
    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic">
                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop"
                       description="HikaShop options"/>
            </fieldset>
        </fields>
    </config>
</extension>
